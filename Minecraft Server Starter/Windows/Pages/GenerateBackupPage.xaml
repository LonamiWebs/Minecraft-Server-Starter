<UserControl x:Class="Minecraft_Server_Starter.GenerateBackupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Minecraft_Server_Starter">
    <StackPanel>
        <!-- title -->
        <TextBlock Margin="4" Text="Generate a new backup" />
        <!-- info -->
        <TextBlock Margin="4" Text="Please select all the options you want to backup:" />
        <!-- backup checkboxes -->
        <StackPanel x:Name="checkBoxes">
            <CheckBox x:Name="bWorlds" Margin="8,4" Content="Backup worlds" Unchecked="anyUnchecked" />
            <CheckBox x:Name="bServerProperties" Margin="8,4" Content="Backup server.properties" Unchecked="anyUnchecked" />
            <CheckBox x:Name="bWhiteList" Margin="8,4" Content="Backup white list" Unchecked="anyUnchecked" />
            <CheckBox x:Name="bOps" Margin="8,4" Content="Backup ops" Unchecked="anyUnchecked" />
            <CheckBox x:Name="bBanned" Margin="8,4" Content="Backup banned players and IPs" Unchecked="anyUnchecked" />
            <CheckBox x:Name="bLogs" Margin="8,4" Content="Backup logs" Unchecked="anyUnchecked" />
            <CheckBox x:Name="bEverything" Margin="8,4" Content="Backup everything (including other folders)" Checked="everythingChecked" Unchecked="everythingUnchecked" />
        </StackPanel>
        <Button x:Name="generateBackupButton" Style="{StaticResource PlainButton}" Content="Generate backup" Height="32" Margin="4" Click="generateBackup" />
    </StackPanel>
</UserControl>